# Libral Core Configuration Template
# Copy to .env or encrypt to .env.gpg for production

# Application Configuration
APP_NAME="Libral Core - Privacy-First Platform"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration  
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost/libral_core
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-immediately
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# GPG Configuration
GPG_HOME=/path/to/gpg/home
GPG_SYSTEM_KEY_ID=your-system-key-fingerprint
GPG_PASSPHRASE=your-gpg-key-passphrase

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram

# Privacy-First Configuration
TEMP_CACHE_RETENTION_HOURS=24
USER_DATA_ENCRYPTION_REQUIRED=true
CENTRAL_LOGGING_DISABLED=true

# ========================================
# AI Module Configuration (Independent)
# ========================================

# AI Server Configuration
AI_HOST=0.0.0.0
AI_PORT=8001
AI_RELOAD=true
AI_LOG_LEVEL=info

# External AI API Keys (for external evaluation)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Usage Quotas
INTERNAL_AI_DAILY_LIMIT=1000
EXTERNAL_AI_DAILY_LIMIT=2
EXTERNAL_AI_HOURLY_LIMIT=1

# AI Cost Limits (USD)
AI_DAILY_COST_LIMIT=10.0
AI_MONTHLY_COST_LIMIT=200.0

# AI Security Settings
AI_REQUIRE_CONTEXT_LOCK=true
AI_ENCRYPT_RESPONSES=true
AI_REMOVE_PII=true
AI_AUTO_DELETE_HOURS=24

# ========================================
# APP Module Configuration (Independent)
# ========================================

# APP Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8002
APP_RELOAD=true
APP_LOG_LEVEL=info

# APP Settings
APP_MAX_PER_USER=100
APP_CACHE_TTL_HOURS=24
APP_AUTO_ARCHIVE_DAYS=90
APP_ENABLE_ANALYTICS=true
APP_ENABLE_PERMISSIONS=true