# Database Configuration
DATABASE_URL=postgresql://libral:your_secure_password@localhost:5432/libral_core
PGHOST=localhost
PGPORT=5432
PGDATABASE=libral_core
PGUSER=libral
PGPASSWORD=your_secure_password

# Redis Configuration (optional, uses mock if not provided)
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
PORT=5000

# Docker Environment Variables
POSTGRES_PASSWORD=libral_secure_password

# Transport Layer Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
SMTP_URL=smtp://user:pass@smtp.example.com:587
MAIL_FROM=Libral Core <no-reply@example.com>
AEGIS_URL=http://localhost:8787
WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Security Configuration
JWT_SECRET=your_jwt_secret_here

# GPG Configuration (for advanced features)
# GPG_HOME=/app/gpg_home
# GPG_PASSPHRASE=your_gpg_passphrase

# External API Keys (configure via Replit Secrets)
# OPENAI_API_KEY=your_api_key_here
# TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Logging
LOG_LEVEL=INFO
DEBUG=false
