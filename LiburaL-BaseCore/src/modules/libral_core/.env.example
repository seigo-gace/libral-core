# Libral Core Configuration Template
# Copy to .env and configure for your environment

# ========================================
# Application Configuration
# ========================================
APP_NAME="Libral Core - Privacy-First Platform"
APP_VERSION="2.0.0"
DEBUG=false
LOG_LEVEL=INFO

# ========================================
# Server Configuration  
# ========================================
HOST=0.0.0.0
PORT=8000
RELOAD=false

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost/libral_core
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# ========================================
# Security Configuration
# ========================================
SECRET_KEY=your-super-secret-key-change-this-immediately
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ========================================
# GPG Configuration
# ========================================
GPG_HOME=/path/to/gpg/home
GPG_SYSTEM_KEY_ID=your-system-key-fingerprint
GPG_PASSPHRASE=your-gpg-key-passphrase

# ========================================
# Telegram Configuration
# ========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram

# ========================================
# Privacy-First Configuration
# ========================================
TEMP_CACHE_RETENTION_HOURS=24
USER_DATA_ENCRYPTION_REQUIRED=true
CENTRAL_LOGGING_DISABLED=true

# ========================================
# AI Module Configuration (Independent)
# ========================================
AI_HOST=0.0.0.0
AI_PORT=8001

# Internal AI (自社AI) - 1000 queries/day
OPENAI_API_KEY=your-openai-api-key
INTERNAL_AI_PROVIDER=openai
INTERNAL_AI_MODEL=gpt-4-turbo-preview

# External AI (判定役) - 2 evaluations per 24 hours
GEMINI_API_KEY=your-google-gemini-api-key
EXTERNAL_AI_PROVIDER=google
EXTERNAL_AI_MODEL=gemini-pro

# Usage Limits
AI_INTERNAL_DAILY_LIMIT=1000
AI_EXTERNAL_DAILY_LIMIT=2
AI_EVALUATION_COOLDOWN_HOURS=24

# ========================================
# APP Module Configuration (Independent)
# ========================================
APP_HOST=0.0.0.0
APP_PORT=8002
APP_MAX_PER_USER=100
APP_CACHE_TTL_HOURS=24
APP_AUTO_ARCHIVE_DAYS=90

# ========================================
# Payment Integration
# ========================================
# Telegram Stars
TELEGRAM_PAYMENT_TOKEN=your-telegram-payment-token

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # or 'live' for production

# PayPay (Japan)
PAYPAY_API_KEY=your-paypay-api-key
PAYPAY_API_SECRET=your-paypay-api-secret
PAYPAY_MERCHANT_ID=your-paypay-merchant-id

# ========================================
# External API Integration
# ========================================
# OpenAI
OPENAI_ORG_ID=your-openai-org-id

# Google Services
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub
GITHUB_TOKEN=your-github-personal-access-token

# ========================================
# Monitoring & Logging
# ========================================
SENTRY_DSN=your-sentry-dsn
LOG_FILE_PATH=/var/log/libral-core
METRICS_ENABLED=true

# ========================================
# Email Configuration (LEB Module)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@libral.example.com
