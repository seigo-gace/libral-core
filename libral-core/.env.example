# Libral Core Configuration Template
# Copy to .env or encrypt to .env.gpg for production

# Application Configuration
APP_NAME="Libral Core - Privacy-First Platform"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration  
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost/libral_core
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-immediately
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# GPG Configuration
GPG_HOME=/path/to/gpg/home
GPG_SYSTEM_KEY_ID=your-system-key-fingerprint
GPG_PASSPHRASE=your-gpg-key-passphrase

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram

# Privacy-First Configuration
TEMP_CACHE_RETENTION_HOURS=24
USER_DATA_ENCRYPTION_REQUIRED=true
CENTRAL_LOGGING_DISABLED=true